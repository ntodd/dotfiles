#!/usr/bin/env bash
#
# Run to setup dotfiles

cd "$(dirname "$0")/.."
DOTFILES_ROOT=$(pwd -P)

set -e

info() {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

user() {
  printf "\r  [ \033[0;33m??\033[0m ] $1\n"
}

success() {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

fail() {
  printf "\r\033[2K  [\033[0;31mFAIL\033[0m] $1\n"
  echo ''
  exit
}

install_oh_my_zsh() {
  if [ -d "$HOME/.oh-my-zsh" ]; then
    success "âœ… Oh My Zsh is already installed"
  else
    info 'ğŸš€ Installing Oh My Zsh...'
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
  fi
}

install_tmux_plugin_manager() {
  if [ -d "$HOME/.tmux/plugins/tpm" ]; then
    success "âœ… Tmux Plugin Manager is already installed"
  else
    info 'ğŸš€ Installing Tmux Plugin Manager...'
    git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
  fi
}

link_file() {
  local src=$1 dst=$2

  local overwrite= backup= skip=
  local action=

  if [ -f "$dst" -o -d "$dst" -o -L "$dst" ]; then
    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]; then
      local currentSrc="$(readlink $dst)"
      if [ "$currentSrc" == "$src" ]; then
        skip=true
      else
        if [[ -n "$CODESPACES" ]]; then
          # We are installing into a codespace, so we should just overwrite
          overwrite=true
        else
          user "ğŸ˜± File already exists: $dst ($(basename "$src")), what do you want to do?\n\
          [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
          read -n 1 action

          case "$action" in
          o)
            overwrite=true
            ;;
          O)
            overwrite_all=true
            ;;
          b)
            backup=true
            ;;
          B)
            backup_all=true
            ;;
          s)
            skip=true
            ;;
          S)
            skip_all=true
            ;;
          *) ;;
          esac
        fi
      fi
    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    if [ "$overwrite" == "true" ]; then
      rm -rf "$dst"
      success "ğŸ—‘ï¸  Removed $dst"
    fi

    if [ "$backup" == "true" ]; then
      mv "$dst" "${dst}.backup"
      success "ğŸ—ï¸ Moved $dst to ${dst}.backup"
    fi

    if [ "$skip" == "true" ]; then
      success "â­ï¸  Skipped $src"
    fi
  fi

  if [ "$skip" != "true" ]; then # "false" or empty
    ln -s "$1" "$2"
    success "ğŸ”— Linked $1 to $2"
  fi
}

install_dotfiles() {
  info 'ğŸš€ Installing dotfiles...'
  local overwrite_all=false backup_all=false skip_all=false
  for src in $(find -H "$DOTFILES_ROOT" -maxdepth 2 -name '*.symlink' -not -path '*.git*'); do
    dst="$HOME/.$(basename "${src%.*}")"
    link_file "$src" "$dst"
  done
}

install_oh_my_zsh
install_tmux_plugin_manager
install_dotfiles

echo ''
echo 'ğŸ‰ Installation complete! ğŸ¥³'
